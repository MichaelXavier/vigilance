name:                vigilance
version:             0.0.0.0
synopsis:            An extensible dead-man's switch system
-- description:         
license:             MIT
license-file:        LICENSE
author:              Michael Xavier
maintainer:          michael@michaelxavier.net
-- copyright:           
category:            Utils
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable vigilance
  hs-source-dirs:     src,test
  main-is: Utils/Vigilance/Main.hs
