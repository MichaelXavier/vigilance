  -- other-extensions:    
  build-depends:       base >=4.6 && <4.7,
                       async == 2.*,
                       aeson >=0.6 && <1.0,
                       attoparsec,
                       bytestring,
                       acid-state,
                       classy-prelude >=0.5.8 && <1.0,
                       configurator >=0.2 && <1.0,
                       containers,
                       data-store >= 0.3.0.2 && <1.0,
                       either == 3.4.1,
                       errors >= 1.4.2 && <2.0,
                       fast-logger >= 0.3.2 && < 1.0,
                       interpolatedstring-perl6 >=0.9.0 && <1.0,
                       lens >=3.9 && < 4.0,
                       mime-mail >= 0.4.2 && <1.0,
                       mtl,
                       safecopy,
                       time,
                       text,
                       transformers,
                       vector,
                       warp,
                       yesod,
                       yesod-core,
                       yesod-platform >= 1.2.3 && < 2.0
  -- hs-source-dirs:      
  default-language:    Haskell2010
  ghc-options: -threaded -O3

Test-Suite test-vigilance
  default-language:    Haskell2010
  Type: exitcode-stdio-1.0
  hs-source-dirs:     src,test
  Main-Is: Spec.hs
